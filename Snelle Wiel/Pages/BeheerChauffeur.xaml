            <ListViewItem>25-11-2017</ListViewItem>
            <ListViewItem>24-11-2017</ListViewItem>
            <ListViewItem>23-11-2017</ListViewItem>
        </ListView>
        <Border BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="4" Grid.RowSpan="6"/>
        <TextBlock FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="1" Text="Chauffeurs"/>
